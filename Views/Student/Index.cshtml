@model List<Student>

<h2>Student List</h2>

@if (Model == null || !Model.Any())
{
    <p>No students found.</p>
}
else
{
    <table>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
        </tr>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.Class</td>
            </tr>
        }
    </table>
}
